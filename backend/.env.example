PORT=4000
NODE_ENV=development
DATABASE_URL=postgresql://fx:fxpass@localhost:5433/forexaixchange?schema=public
REDIS_URL=redis://localhost:6379

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Internal transfers between users - MUST remain false in production
TRANSFERS_ENABLED=false

# ============================================================================
# FINANCE SYSTEM CONFIGURATION
# ============================================================================
# Reserve ratio thresholds (decimal)
RESERVE_RATIO_MIN=1.1
RESERVE_RATIO_WARNING=1.2

# Withdrawal limits (USD)
FREE_DAILY_WITHDRAWAL_LIMIT=500
PREMIUM_DAILY_WITHDRAWAL_LIMIT=10000
LARGE_WITHDRAWAL_THRESHOLD=1000

# Fee configuration
WITHDRAWAL_FEE_PERCENT=2
DEPOSIT_FEE_PERCENT=0

# OTP expiration (seconds)
OTP_EXPIRATION_SECONDS=300
